{
  //"layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 45, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 5, // Gaps between modules (4px)
  "margin-top": 2,
  "margin-bottom": 0,
  "margin-left": 7,
  "margin-right": 7,
  "reload_style_on_change": true,
  // Choose the order of the modules
  "modules-left": [
    "custom/power",
    "clock",
    //"custom/weather",
    //"custom/clipboard",
    "hyprland/workspaces"
  ],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    //"mpd",
    //"idle_inhibitor",
    //"pulseaudio#microphone",
    "tray",
    "custom/swaync",
    "network",
    //"power-profiles-daemon",
    "cpu",
    "memory",
    "temperature",
    "backlight",
    //"keyboard-state",
    //"sway/language",
    "pulseaudio",
    "battery"
    //"battery#bat2",
    //"clock",
    //"custom/power"
  ],
  "custom/power": {
    "format": "⏻",
    //"format": "{}",
    // "exec": "~/.scripts/tools/expand power",
    "exec": "echo '{\"text\":\"⏻\",\"tooltip\":\"Power\"}'",
    "return-type": "json",
    "on-click": "~/.config/hypr/scripts/wlogout.sh",
    //"on-click-right": "~/.config/hypr/scripts/ChangeBlur.sh",
    "interval": 86400, // once every day
    "tooltip": true
    /*
    "format": "⏻",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "~/.config/wlogout/launch.sh", // Menu file in resources folder
    "menu-actions": {
      "shutdown": "shutdown",
      "reboot": "reboot",
      "suspend": "systemctl suspend",
      "hibernate": "systemctl hibernate"
    }
    */
    // "on-click": "pkill wofi || wofi --show drun -n",
    // "on-click-right": "pkill wofi || wofi --show run -n",
  },
  // NOTE:! This is only for Arch and Arch Based Distros  depend: \
  "custom/weather": {
    //shows the current weather and forecast
    "format": "{}",
    "format-alt": "{alt}: {}",
    "format-alt-click": "click",
    "interval": 3600,
    "return-type": "json",
    //"exec": "~/.config/hypr/UserScripts/Weather.sh",
    "exec": "~/.config/hypr/scripts/Weather.py",
    "exec-if": "ping wttr.in -c1",
    "tooltip": true,
  },
  /*
